# SOLAT v3.1 Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# APPLICATION MODE
# =============================================================================
# DEMO = IG demo account (paper trading)
# LIVE = IG live account (real money) - USE WITH EXTREME CAUTION
SOLAT_MODE=DEMO

# Application environment
SOLAT_ENV=development

# =============================================================================
# IG BROKER CREDENTIALS
# =============================================================================
# Get these from your IG account settings
# Demo: https://demo-api.ig.com
# Live: https://api.ig.com
IG_API_KEY=your_api_key_here
IG_USERNAME=your_username_here
IG_PASSWORD=your_password_here
IG_ACCOUNT_ID=your_account_id_here

# Account type: DEMO or LIVE (overrides SOLAT_MODE for IG specifically)
IG_ACC_TYPE=DEMO

# =============================================================================
# IG CLIENT SETTINGS (optional - sensible defaults)
# =============================================================================
# Request timeout in seconds
IG_REQUEST_TIMEOUT_S=20

# Max retry attempts for failed requests
IG_MAX_RETRIES=3

# Rate limiting: requests per second
IG_RATE_LIMIT_RPS=2.0

# Rate limiting: burst capacity
IG_RATE_LIMIT_BURST=5

# =============================================================================
# DATA PATHS
# =============================================================================
# Where to store historical data, logs, and run artefacts
# Defaults to ./data if not set
SOLAT_DATA_DIR=./data

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Python sidecar server
SOLAT_HOST=127.0.0.1
SOLAT_PORT=8765

# =============================================================================
# HISTORICAL DATA SETTINGS
# =============================================================================
# Default number of days for historical data sync (1-365)
HISTORY_DEFAULT_DAYS=30

# Maximum rows to return per data API call (100-50000)
HISTORY_MAX_ROWS_PER_CALL=5000

# Gap tolerance multiplier for data quality checks (1.0-10.0)
# 1.5 = 150% of expected interval before flagging as gap
QUALITY_GAP_TOLERANCE_MULTIPLIER=1.5

# =============================================================================
# LOGGING
# =============================================================================
# DEBUG, INFO, WARNING, ERROR, CRITICAL
SOLAT_LOG_LEVEL=INFO
